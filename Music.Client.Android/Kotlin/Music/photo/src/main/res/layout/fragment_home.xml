<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="@string/photo_app_name"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/artist_stories"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/text_home"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/split_action_bar"
        android:background="@color/black"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/artist_stories"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/artist_photos"
        app:layout_constraintTop_toBottomOf="@id/split_action_bar"/>

</androidx.constraintlayout.widget.ConstraintLayout>