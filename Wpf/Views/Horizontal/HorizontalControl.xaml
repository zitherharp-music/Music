<Window x:Class="Wpf.Views.Horizontal.HorizontalControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Zither Harp Music: Television - Horizontal: Control Panel" 
        Height="450" Width="800" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <DockPanel Height="50">
        <TextBlock Text="Video ID:"
                   VerticalAlignment="Center"/>
        <TextBox Name="mLiveStreamingId"
                 Width="300"/>
        <Button Name="mStart"
                Content="Start"/>
    </DockPanel>
</Window>
