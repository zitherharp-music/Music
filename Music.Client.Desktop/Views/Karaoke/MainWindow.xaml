<Window x:Class="Music.Client.Desktop.Views.Karaoke.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Music.Client.Desktop.Views.Karaoke"
        mc:Ignorable="d"
        Title="Zither Harp Music: Karaoke" Height="450" Width="800" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="5">
            <StackPanel.Resources>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Padding" Value="10"/>
                </Style>
            </StackPanel.Resources>
            
            <Image Width="100" Height="100"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Đề xuất"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
